<%= form_for(@teacher) do |f| %>
  
  <div class="form-group <%= @teacher.errors[:name].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Nome</label>
    <%= f.text_field :name, :class=>"form-control" %>
    <% if @teacher.errors[:name].any? %>
      <% @teacher.errors[:name].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <div class="form-group <%= @teacher.errors[:birth].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Data de nascimento</label>
    <%= f.text_field :birth, :class => "datepick form-control", :value => formatar_data(@teacher.birth) %>
    <% if @teacher.errors[:birth].any? %>
      <% @teacher.errors[:birth].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  

  <div class="form-group">
    <label>Sexo</label>
    <%= f.select :sex, Teacher::Sex.map{|status| [status[1], status[0] ]}, {}, {:class=>"form-control"} %>
  </div>

  <div class="form-group <%= @teacher.errors[:cpf].any? == true ? 'has-error' : '' %>">
    <label class="control-label">CPF</label>
    <%= f.text_field :cpf, :class=>"form-control" %>
    <% if @teacher.errors[:cpf].any? %>
      <% @teacher.errors[:cpf].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <div class="form-group <%= @teacher.errors[:street].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Rua</label>
    <%= f.text_field :street, :class=>"form-control" %>
    <% if @teacher.errors[:street].any? %>
      <% @teacher.errors[:street].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>

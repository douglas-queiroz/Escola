<%= form_for(@teacher) do |f| %>
  
  <div class="form-group <%= @teacher.errors[:name].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Nome</label>
    <%= f.text_field :name, :class=>"form-control" %>
    <% if @teacher.errors[:name].any? %>
      <% @teacher.errors[:name].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :birth %><br>
    <%= f.date_select :birth %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= f.number_field :sex %>
  </div>

  <div class="form-group <%= @teacher.errors[:cpf].any? == true ? 'has-error' : '' %>">
    <label class="control-label">CPF</label>
    <%= f.text_field :cpf, :class=>"form-control" %>
    <% if @teacher.errors[:cpf].any? %>
      <% @teacher.errors[:cpf].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :cep %><br>
    <%= f.text_field :cep %>
  </div>
  <div class="field">
    <%= f.label :comp %><br>
    <%= f.text_field :comp %>
  </div>
  <div class="field">
    <%= f.label :neighborhood %><br>
    <%= f.text_field :neighborhood %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <%= link_to 'Voltar', student_classes_path, :class=>"btn btn-default" %>
  </div>
<% end %>

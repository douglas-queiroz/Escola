      <% end %>
    <% end %>
  </div>

  <div class="form-group <%= @teacher.errors[:neighborhood].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Bairro</label>
    <%= f.text_field :neighborhood, :class=>"form-control" %>
    <% if @teacher.errors[:neighborhood].any? %>
      <% @teacher.errors[:neighborhood].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <div class="form-group <%= @teacher.errors[:city].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Cidade</label>
    <%= f.text_field :city, :class=>"form-control" %>

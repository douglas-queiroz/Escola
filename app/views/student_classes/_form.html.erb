<%= form_for(@student_class) do |f| %>

  <div class="form-group <%= @student_class.errors[:description].any? == true ? 'has-error' : '' %>">
    <label class="control-label">Descrição</label>
    <%= f.text_field :description, :class=>"form-control" %>
    <% if @student_class.errors[:description].any? %>
      <% @student_class.errors[:description].each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <!-- TODO: ajustar o combobox -->
  <div class="form-group">
    <label>Turno</label>
    <%= f.select :turn, StudentClass::Turn.map{|status| [status[1], status[0] ]}, {}, {:class=>"form-control"} %>
  </div>
  <div class="actions">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <%= link_to 'Voltar', student_classes_path, :class=>"btn btn-default" %>
  </div>
<% end %>

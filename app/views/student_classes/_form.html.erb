<%= form_for(@student_class) do |f| %>
  <% if @student_class.errors.any? %>
    <div id="error_explanation">
      <% @student_class.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Descrição</label>
    <%= f.text_field :description, :class=>"form-control" %>
  </div>

  <!-- TODO: ajustar o combobox -->
  <div class="form-group">
    <label>Turno</label>
    <%= f.select :turn, StudentClass::Turn.map{|status| [status[1], status[0] ]}, {}, {:class=>"form-control"} %>
  </div>
  <div class="actions">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <%= link_to 'Voltar', student_classes_path, :class=>"btn btn-default" %>
  </div>
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title>Escola</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :nested_form, "nested_form" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard">Meu Filho</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li id="dashboard"><a href="/dashboard">Home</a></li>
            <li id="students"><a href="/students">Alunos</a></li>
            <li id="student_classes"><a href="/student_classes">Turma</a></li>
            <li id="teachers"><a href="/teachers">Professores</a></li>
            <li id="parents"><a href="/parents">Pais</a></li>
            <li id="notifications"><a href="/notifications">Notificações</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="#" style="color: white;"><b>Olá <%= session["name"] %>!</b></a></li>
            <li><a href="/sign_out">Sair</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <div class="starter-template">
    	<%= yield %>
      </div>

    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <script type="text/javascript">
      jQuery(document).ready(function($){
        carregarMascaras();
        carregarMenuSelecionado();
      });

      function carregarMascaras(){
        $('.mask_fone').mask('(99) 9999-9999');
        $('.mask_cpf').mask('999.999.999-99');
        $('.mask_cnpj').mask('99.999.999/9999-99');
        $('.mask_cep').mask('99999-999');
        $('.datepick').mask('99/99/9999');
        $('.year').mask('9999');
        $('.plate').mask('AAA-9999');

      }

      function carregarMenuSelecionado(){
        var url = window.location.pathname;

        if(url.indexOf("/dashboard") == 0){
          $("#dashboard").addClass("active");
        }else if(url.indexOf("/students") == 0){
          $("#students").addClass("active");
        }else if(url.indexOf("/student_classes") == 0){
          $("#student_classes").addClass("active");
        }else if(url.indexOf("/teachers") == 0){
          $("#teachers").addClass("active");
        }else if(url.indexOf("/parents") == 0){
          $("#parents").addClass("active");
        }else if(url.indexOf("/notifications") == 0){
          $("#notifications").addClass("active");
        }
      }
    </script>
</body>
</html>
